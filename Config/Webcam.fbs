include "Builtins.fbs";
include "Common.fbs";

namespace nos.webcam;

attribute "transient";

enum WebcamTextureFormat : uint {
  NONE = 0,
  NV12 = 1,
  YUY2 = 2,
  RGB24 = 3
}

table WebcamStreamInfo {
  id: nos.fb.UUID(transient);
  device_name: string;
  format: WebcamTextureFormat;
  resolution: nos.fb.vec2u;
  frame_rate: nos.fb.vec2u;
  stream_index: uint;
}